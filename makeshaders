vpath %.vert ./
vpath %.frag ./
vpath %Vertex.spv ./debug
vpath %Fragment.spv ./debug

#in = Triangle.vert Triangle.frag
#out = TriangleVertex.spv TriangleFragment.spv

#out = %Vertex.spv %Fragment.spv
#in = %.vert %.frag
NAME ?= Triangle
OUT := $(NAME)Vertex.spv $(NAME)Fragment.spv

all: mkdir $(OUT)

.PHONY = all

mkdir:
	mkdir -p debug

%Vertex.spv: %.vert
	echo $<
	$(shell glslc -o ./debug/$@ $<)

%Fragment.spv: %.frag
	$(shell glslc -o ./debug/$@ $<)

%.vert:
	touch Triangle.vert

%.frag:
	touch Triangle.frag

